# Update system
function update() {
    cd
    echo Finding MacOS system updates...
    sudo softwareupdate -i -a --verbose
    echo Fetching newest version of Homebrew and all formulae...
    brew update
    echo Upgrading outdated casks and formulae...
    brew upgrade
    echo Installing and upgrading all dependencies from Brewfile...
    brew bundle
    echo Cleaning up...
    brew cleanup
    echo Checking for potential problems...
    brew doctor
}
